
<%- include("header") -%>

        <div class="box" id="heading">
            <h1> <%= listTitle %> </h1>
        </div>

        <div class="box">
            <% for(let i = 0; i < newItem.length; i++) { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= newItem[i]._id %>" onchange="this.form.submit()">
                        <p> <%= newItem[i].name %> </p>
                    </div>
                </form>
                    
            <% } %>

            <form action="/" method="post">
                <input type="text" placeholder="New Todo" name="inputTodo" autocomplete="off" required>
                <button type="submit" name="todoSubmit" value=<%= listTitle %>>+</button>
            </form>

        </div>

<%- include("footer") -%>